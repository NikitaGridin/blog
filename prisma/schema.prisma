generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  role  ROLE    @default(USER)
  name  String?
  image String?
}

model VerificationToken {
  id      String   @id @default(cuid())
  token   String   @unique
  expires DateTime
}

enum ROLE {
  ADMIN
  USER
}
